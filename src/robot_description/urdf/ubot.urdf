<?xml version="1.0"?>
<robot name="ubot">
  <!-- i.e rotation center of the robot -->
  <link name="base_link" />
    <!-- <visual>
        <geometry>
            <box size="0.25 0.29 0.051"/>
        </geometry>
        <material name="white">
            <color rgba="1 1 1 0.2"/>
        </material>
      </visual> -->
    <!-- </link> -->

    <!-- robot_base -->
    <!-- <link name="base_link">
    <visual>
        <geometry>
            <box size="0.25 0.29 0.051"/>
        </geometry>
        <material name="white">
            <color rgba="1 1 1 0.2"/>
        </material>
      </visual>
    </link> -->
  <!-- i.e physical center of the robot X Y Z -->
  <link name="robot_center">
      <visual>
          <geometry>
              <box size="0.25 0.29 0.051"/>
          </geometry>
          <material name="white">
              <color rgba="1 1 1 0.2"/>
          </material>
      </visual>
      <collision>
        <geometry>
            <box size="0.25 0.29 0.051"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.0" />
        <inertia ixx="0.015" iyy="0.0375" izz="0.0375" ixy="0" ixz="0" iyz="0"/>
      </inertial>
  </link>

  <joint name="robot_center_joint" type="fixed">
      <axis xyz="1 1 1"/>
      <parent link="base_link"/>
      <child link="robot_center"/>
      <origin rpy="0 0 0" xyz="0 0.10 0"/>
  </joint> 

<!-- wheel LEFT -->
  <link name="wheel_left">
      <visual>
          <geometry>
              <cylinder length="0.0086" radius="0.035" />
          </geometry>
          <material name="red">
              <color rgba="1 0. 0. 1"/>
          </material>
      </visual>
<inertial>
<mass value="0.1"/>
<inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5"
ixy="0" ixz="0" iyz="0"/> </inertial>
  </link>
  
  <joint name="wheel_left_joint" type="continuous">
      <axis xyz="0 0 1"/>
      <parent link="base_link"/>
      <child link="wheel_left"/>
      <origin rpy="1.57079632679 0 1.57079632679" xyz="-0.117 0 -.0105"/>
  </joint>

<!-- wheel RIGHT -->
  <link name="wheel_right">
    <visual>
        <geometry>
            <cylinder length="0.0086" radius="0.035" />
        </geometry>
        <material name="red">
            <color rgba="1 0. 0. 1"/>
        </material>
    </visual>
    <inertial>
<mass value="0.1"/>
<inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5"
ixy="0" ixz="0" iyz="0"/> </inertial>
  </link>
  
  <joint name="wheel_right_joint" type="continuous">
      <axis xyz="0 0 1"/>
      <parent link="base_link"/>
      <child link="wheel_right"/>
      <origin rpy="1.57079632679 0 1.57079632679" xyz="0.117 0 -.0105"/>
  </joint>

<!-- casters -->
    <link name="left_caster">
        <visual>
            <geometry>
                <sphere radius="0.017" />
            </geometry>
            <material name="red">
                <color rgba="1 0. 0. 1"/>
            </material>
        </visual>
              <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.00083" iyy="0.00083" izz="0.000167"
        ixy="0" ixz="0" iyz="0"/> 
      </inertial>
    </link> 
    <!-- continuous -->
   <joint name="left_caster_joint" type="continuous">
        <axis xyz="0 0 1"/>
        <parent link="base_link"/>
        <child link="left_caster"/>
        <origin rpy="0 0 0" xyz="-0.05 0.22 -0.0235"/>
    </joint>

    <link name="right_caster">
        <visual>
            <geometry>
                <sphere radius="0.017" />
            </geometry>
            <material name="red">
                <color rgba="1 0. 0. 1"/>
            </material>
        </visual>
              <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.00083" iyy="0.00083" izz="0.000167"
        ixy="0" ixz="0" iyz="0"/> 
      </inertial>
    </link>

    <joint name="right_caster_joint" type="continuous">
        <axis xyz="0 0 1"/>
        <parent link="base_link"/>
        <child link="right_caster"/>
        <origin rpy="0 0 0" xyz="0.05 0.22 -0.0235"/>
    </joint>

    <!-- Lidar - laser scan -->
    <link name="laser_scan">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <box size="0.01 0.01 0.01"/> 
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <box size="0.01 0.01 0.01"/> 
            </geometry>

        </visual>
        <inertial>
            <mass value="1e-5" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>
    </link>
    
    <joint name="laser_scan_joint" type="fixed">
        <axis xyz="0 1 0"/>
        <parent link="robot_center"/>
        <child link="laser_scan"/>
        <origin rpy="0 0 0" xyz="0 0 0.2"/>
    </joint>

    <gazebo reference="laser_scan"> 
        <sensor type="ray" name="hokuyo">
            <pose>0 0 0 0 -0 0</pose> 
            <!-- <visualize>false</visualize>  -->
            <!-- <update_rate>40</update_rate>  -->
                <ray>
                    <scan>
                        <horizontal>
                            <samples>720</samples> 
                            <resolution>1</resolution> 
                            <min_angle>-2.26889</min_angle> 
                            <max_angle>2.26889</max_angle>
                        </horizontal>
                    </scan>
                    <range>
                        <min>0.10</min> 
                        <max>5.0</max> 
                        <resolution>0.01</resolution>
                    </range>
                </ray>
                <!-- <plugin name="gpu_laser" filename="libgazebo_ros_gpu_laser.so"> 
                    <topicName>/scan</topicName> 
                    <frameName>laser_scan</frameName>
                </plugin> -->
                 <plugin name="laser" filename="libRayPlugin.so" />
                    <plugin name="link_laser_controller" filename="libgazebo_ros_laser.so">
                    <topicName>laser_scan</topicName>
                    <frameName>laser_scan</frameName>
                </plugin>
                <always_on>1</always_on>
                <update_rate>30</update_rate>
                <visualize>true</visualize>
        </sensor>
    </gazebo>

    <gazebo>
        <!-- <static>false</static> -->
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/</robotNamespace>
                <legacyModeNS>true</legacyModeNS>
        </plugin>
    </gazebo>

    <!-- differential drive plugin -->
    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so"> 
            <updateRate>20</updateRate>
            <alwaysOn>true</alwaysOn>
            <leftJoint>wheel_left_joint</leftJoint> 
            <rightJoint>wheel_right_joint</rightJoint> 
            <robotBaseFrame>base_link</robotBaseFrame> 
            <wheelSeparation>0.25</wheelSeparation> 
            <wheelDiameter>0.2</wheelDiameter> 
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <commandTopic>cmd_vel</commandTopic>
            <publishWheelJointState>true</publishWheelJointState>
            <legacyMode>true</legacyMode>
        </plugin>
    </gazebo>

<!--  rostopic pub -1 cmd_vel geometry_msgs/Twist \ '{linear: {x: 1.0}, angular: {z: 0.5}}' -->



  <!-- http://wiki.ros.org/urdf/Tutorials/Using%20a%20URDF%20in%20Gazebo -->

</robot>
